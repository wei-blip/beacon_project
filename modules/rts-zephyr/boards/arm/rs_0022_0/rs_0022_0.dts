/dts-v1/;
#include <st/l4/stm32l452Xc.dtsi>
#include <st/l4/stm32l452c(c-e)ux-pinctrl.dtsi>

/ {
	model = "RTS RS.0022-0 board";
	compatible = "rts,rs_0022_0";

	chosen {
		zephyr,console = &usart2;
		zephyr,shell-uart = &usart2;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		blue_led: led_0 {
			gpios = <&gpioa 12 GPIO_ACTIVE_HIGH>;
			label = "User LED0";
		};
        yellow_led: led_1 {
			gpios = <&gpiob 0 GPIO_ACTIVE_HIGH>;
			label = "User LED1";
		};
        red_led: led_2 {
            gpios = <&gpioa 15 GPIO_ACTIVE_HIGH>;
            label = "User LED2";
        };
	};

    aliases {
        led0 = &blue_led;
        led1 = &yellow_led;
        led2 = &red_led;
    };
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;            // 16 / 1 = 16MHz
	mul-n = <20>;           // 16 * 24 = 384MHz
	div-p = <7>;            // 384 / 7 = 54.85MHz
	div-q = <2>;            // 384 / 8 = 48MHz
	div-r = <4>;            // 384 / 6 = 64MHz
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(80)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pa3>;
	current-speed = <115200>;
	status = "okay";
};

&dma1 {
    status = "okay";
};

&spi1 {
    pinctrl-0 = <&spi1_sck_pa5 &spi1_miso_pa6 &spi1_mosi_pa7>;
    status = "okay";
};
&spi2 {
	pinctrl-0 = <&spi2_sck_pb13 &spi2_miso_pb14 &spi2_mosi_pb15>;
    status = "okay";
};

&i2c2 {
	pinctrl-0 = <&i2c2_scl_pb10 &i2c2_sda_pb11>;
	clock-frequency = <I2C_BITRATE_FAST>;
	status = "okay";
};

&rtc {
	status = "okay";
};

&rng {
    status = "okay";
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		/*
		 * Reserve the final 16 KiB for file system partition
		 */
		boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x00000000 0xC350>;
		};

		slot0_partition:partition@C350 {
            label = "image-0";
            reg = <0x0000C350 0x1CF2B>;
		};

		slot1_partition:partition@2927B {
            label = "image-1";
            reg = <0x0002927B 0x1CF2B>;
		};

		scratch_partition:partition@461A6 {
            label = "image-scratch";
            reg = <0x000461A6 0x1CF2B>;
		};

        storage_partition: partition@630D1 {
			label = "storage";
			reg = <0x000630D1 0x1CF2B>;
		};
	};
};

